{
  "name": "xendit-challenges",
  "version": "1.0.0",
  "description": "Xendit senior software engineer challenges",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all start",
    "dev": "nodemon --watch src --watch swagger.yaml -e ts,ejs --exec npm run dev:start",
    "prestart": "npm run build",
    "start": "node .",
    "test": "npm run test"
  },
  "keywords": [
    "xendit"
  ],
  "author": "Ari Firmanto",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "swagger-ui-express": "^4.1.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.31",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  }
}
